{
  ecmaFeatures: {
    jsx: true,
    modules: true
  },
  env: {
    es6: true,
    node: true,
    browser: true
  },
  //parser: "babel-eslint",
  parserOptions: {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  plugins: [
    "react"
  ],
  rules: {
    "indent": [2, 2],
    "semi": [2, "always"],
    "jsx-quotes": ["error", "prefer-single"],
    "operator-linebreak": "off"
  },
  "extends": ["airbnb-standard"]
}
